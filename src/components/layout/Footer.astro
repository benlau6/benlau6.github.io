---
import { menuLinks, siteConfig } from "@/site-config";

const year = new Date().getFullYear();
---

<footer
	class="text-gray-600 dark:text-gray-400 mt-auto flex w-full flex-col items-center justify-center gap-y-2 pb-4 pt-20 text-center align-top font-semibold sm:flex-row sm:justify-between sm:text-sm"
>
	<div class="me-0 sm:me-4">
		&copy; {year}
		{siteConfig.author}
	</div>
	<nav
		aria-label="More on this site"
		class="sm:divide-gray-500 flex gap-x-2 sm:gap-x-0 sm:divide-x"
	>
		{
			menuLinks.map((link) => (
				<a class="px-4 py-2 sm:py-0 sm:hover:text-textColor sm:hover:underline" href={link.path}>
					{link.title}
				</a>
			))
		}
	</nav>
</footer>
